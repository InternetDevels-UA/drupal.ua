+/**
+ * Alter outgoing mail, check if it's system action mail.
+ */
+function mimemail_mail_alter(&$message) {
+  // If is's system action email, we should override it's message, as system
+  // module has already filtered it.
+  if ($message['id'] == 'system_action_send_email') {
+    system_mail_html('action_send_email', $message, $message['params']);
+  }
+}
